*
  box-sizing: border-box

body
  padding: 0
  margin: 0
  overflow: hidden

// iscroll
.wrap
  margin: 0
  position: absolute
  top: 0
  bottom: 0
  width: 100%
  overflow: hidden
  z-index: 1

.scroll
  width: 100%
  z-index: 1
  height: 4000px

// figures
.polymorph
  display: block
  position: fixed
  border: 1px solid transparent
  overflow: hidden
  border-radius: 50%
  margin: 0

  .top, .bottom
    transform-origin: 50%
    content: ''
    display: block
    width: 0
    height: 0
    border-left: solid transparent
    border-right: solid transparent

  .top
    border-bottom-style: solid

  .bottom
    border-top-style: solid
